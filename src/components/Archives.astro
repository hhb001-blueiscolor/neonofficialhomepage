---
import archivesData from '../data/archives.json';
const { archives } = archivesData;

// 日付でソート（新しい順）
const sortedArchives = [...archives].sort((a, b) =>
    new Date(b.sortDate).getTime() - new Date(a.sortDate).getTime()
);

// 固定表示（pinned）を抽出
const pinnedArchives = sortedArchives.filter(a => a.pinned);

// 固定表示以外を新しい順に取得
const recentArchives = sortedArchives.filter(a => !a.pinned);

// 表示用: 固定1件 + 最新2件 = 最大3件
const pinnedToShow = pinnedArchives.slice(0, 1);
const recentToShow = recentArchives.slice(0, 3 - pinnedToShow.length);

// 表示するアーカイブ（固定を先に、その後最新順）
const displayArchives = [...pinnedToShow, ...recentToShow];

// 全件数（もっと見るボタンの表示判定用）
const totalCount = archives.length;
const hasMore = totalCount > 3;
---

<section class="section">
    <div class="container">
        <h2 class="section-title">ARCHIVES</h2>

        <div class="events-grid">
            {displayArchives.map((archive) => (
                <article class={`event-card ${archive.pinned ? 'pinned' : ''}`}>
                    {archive.pinned && (
                        <span class="pinned-badge">
                            <i class="fas fa-thumbtack"></i>
                        </span>
                    )}
                    <div class="event-card-inner">
                        <div class="event-images">
                            {archive.images.map((img) => (
                                <img
                                    src={`/images/${img}`}
                                    alt={archive.title}
                                    class="event-image"
                                    data-lightbox={`/images/${img}`}
                                />
                            ))}
                        </div>
                        <div class="event-details">
                            <h3 class="event-title">{archive.title}</h3>
                            <div class="event-meta">
                                <p class="event-date">
                                    <i class="fas fa-calendar-alt"></i>
                                    {archive.date}
                                </p>
                                <p class="event-venue">
                                    <i class="fas fa-map-marker-alt"></i>
                                    {archive.venue}
                                </p>
                            </div>
                        </div>
                    </div>
                </article>
            ))}
        </div>

        {hasMore && (
            <div class="archives-more">
                <a href="/archives" class="more-btn">
                    <span>過去開催をもっと見る</span>
                    <i class="fas fa-chevron-right"></i>
                </a>
            </div>
        )}
    </div>
</section>

<style>
    .event-card {
        position: relative;
    }

    .event-card.pinned {
        border-color: var(--color-neon-magenta);
    }

    .event-card.pinned:hover {
        border-color: var(--color-neon-magenta);
        box-shadow: 0 0 30px rgba(252, 0, 255, 0.15);
    }

    .pinned-badge {
        position: absolute;
        top: var(--spacing-sm);
        right: var(--spacing-sm);
        background: var(--color-neon-magenta);
        color: var(--color-bg);
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.8rem;
        z-index: 10;
        box-shadow: 0 0 12px rgba(252, 0, 255, 0.6);
    }

    .archives-more {
        display: flex;
        justify-content: center;
        margin-top: var(--spacing-lg);
    }

    .more-btn {
        display: inline-flex;
        align-items: center;
        gap: var(--spacing-xs);
        background: transparent;
        border: 1px solid var(--color-border);
        color: var(--color-text);
        padding: 0.75rem 1.5rem;
        border-radius: 30px;
        font-size: 0.9rem;
        transition: var(--transition-normal);
    }

    .more-btn:hover {
        border-color: var(--color-neon-cyan);
        color: var(--color-neon-cyan);
        box-shadow: 0 0 15px rgba(0, 255, 252, 0.2);
        text-shadow: none;
    }

    .more-btn i {
        font-size: 0.75rem;
        transition: transform var(--transition-fast);
    }

    .more-btn:hover i {
        transform: translateX(3px);
    }
</style>
