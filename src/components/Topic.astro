<section class="section">
    <div class="container">
        <h2 class="section-title">TOPIC</h2>

        <div class="events-grid">
            <article class="event-card">
                <div class="event-card-inner">
                    <a href="/app/ja" class="event-images topic-link">
                        <img
                            src="/images/neon-vj-topic.jpeg"
                            alt="NeoN VJ"
                            class="event-image"
                        />
                    </a>
                    <div class="event-details">
                        <p class="topic-date">2025.12.21</p>
                        <h3 class="event-title">NeoN VJ 配信決定</h3>
                        <div class="topic-content">
                            <p class="topic-sub">NeoN VJ サイト公開しました</p>
                            <p class="topic-note">＊左の画像をクリック</p>
                        </div>
                    </div>
                </div>
            </article>
            <article class="event-card">
                <div class="event-card-inner">
                    <div class="event-images">
                        <img
                            src="/images/ANTHEM_1.jpeg"
                            alt="NeoN ANTHEM PROJECT"
                            class="event-image"
                            data-lightbox="/images/ANTHEM_1.jpeg"
                        />
                        <img
                            src="/images/ANTHEM_2.jpeg"
                            alt="NeoN ANTHEM PROJECT"
                            class="event-image"
                            data-lightbox="/images/ANTHEM_2.jpeg"
                        />
                    </div>
                    <div class="event-details">
                        <p class="topic-date">2025.12.13</p>
                        <h3 class="event-title">NeoN ANTHEM PROJECT 始動</h3>
                        <div class="topic-content">
                            <p class="topic-label">第1弾アーティスト</p>
                            <p class="topic-artist">空きっ腹に酒</p>
                            <p class="topic-artist">ビレッジマンズストア</p>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </div>
</section>

<style>
    .topic-link {
        display: block;
        transition: opacity 0.3s ease;
    }

    .topic-link:hover {
        opacity: 0.8;
    }

    .topic-date {
        font-size: 0.9rem;
        color: var(--color-text-muted);
        margin-bottom: var(--spacing-xs);
    }

    .topic-content {
        margin-top: var(--spacing-sm);
    }

    .topic-label {
        font-size: 0.9rem;
        color: var(--color-text-muted);
        margin-bottom: var(--spacing-xs);
    }

    .topic-artist {
        font-size: 1.1rem;
        font-weight: 500;
        margin-bottom: var(--spacing-xs);
    }
</style>
